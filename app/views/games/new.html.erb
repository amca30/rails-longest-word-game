<h2 class="p-4 m-2">New game</h2>
<div class="container mw-100">
<ul class="d-flex list-unstyled align-items-center">
  <% @letters.each do |letter| %>
    <li class="bg-primary m-4 p-4 text-center rounded fs-3 font-monospace text-white" style="width: 100px; height: 100px;"><%= letter.capitalize %></li>
  <% end %>
</ul>
</div>

<p class="ms-4">What is the longest word you can find ?</p>
<form action="/score" method="post" data-turbo="false" class="input-group col-12 ms-4">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="new" class="border-2 border rounded-start col-10">
  <input class="btn btn-primary col-1" type="submit" value="Play!">
  <%= hidden_field_tag :letters, @letters %>
  <!-- ... -->
</form>
